{
  "manifest_version": 3,

  "name": "Professional Networking Auto Signatures",
  "short_name": "Auto Message Signnatures",
  "description": "This extension auto appends a signature to the message you're sending to someone on the most famous professional networking website.",
  "version": "2.1.0",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "96": "icon96.png",
    "128": "icon128.png"
  },
  "action": {
    "default_icon"  : "icon.png",
    "default_title" : "Change Signature",
    "default_popup" : "popup.html"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://*.linkedin.com/"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/*"],
      "js": ["contentScript.js"]
    }
  ]
}
